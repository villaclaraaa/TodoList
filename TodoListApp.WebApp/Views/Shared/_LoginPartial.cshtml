@using Microsoft.AspNetCore.Identity
@using TodoListApp.Identity.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var username = user.FirstName + " " + user.LastName;
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark">Hello @username!</a>
		 <!--href="/Identity/Account/Manage" --> 
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li> 
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" href="/Identity/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" href="/Identity/Account/Login">Login</a>
    </li>
}
</ul>
